SELECT * FROM ORDERS;
-- NULL VALUE FUNCTIONS â€“ 20 Questions
-- Replace NULL price with 0.
SELECT unit_price,nvl(unit_price,0) from orders;
-- Replace NULL Customer_Name with 'Unknown'.
select customer_name,nvl(customer_name,'unknown') from orders; 
-- Count NULL values in Product_Name.
select count(*)-count(product_name) from orders;
-- Find rows where Order_Date is NULL.
SELECT * from orders where order_date is NULL;
-- Use COALESCE to return first non-null value.
SELECT COALESCE(product_name,'c99') from ORDERS;
-- Use NVL to replace NULL values.
SELECT unit_price,nvl(unit_price,0) from orders;
-- Use IFNULL function.
SELECT unit_price,NVL(unit_price,0) from orders;
-- Check if column is NULL.
SELECT *FROM Orders WHERE Unit_Price IS NULL;
-- Check if column is NOT NULL.
SELECT *FROM Orders WHERE Unit_Price IS NOT NULL;
-- Use NULLIF between two columns.
SELECT Quantity,Unit_Price,NULLIF(Quantity, Unit_Price) FROM Orders;
-- Replace blank values with NULL.
SELECT NULLIF(Customer_Name,'') AS Clean_Name FROM Orders;
-- Count non-null values.
SELECT COUNT(unit_price) FROM Orders;
-- Filter records where price is NULL or 0.
SELECT * FROM Orders WHERE Unit_Price IS NULL OR Unit_Price = 0;
-- Use CASE to handle NULL values.
SELECT CASE
       WHEN Unit_Price IS NULL THEN 0
       ELSE Unit_Price
       END AS Price_Value
FROM Orders;
-- Compare NULL values properly.
SELECT * FROM Orders WHERE Customer_Name IS NULL;
-- Find average excluding NULL values.
SELECT AVG(Unit_Price) AS Avg_Price FROM Orders;
-- Find sum ignoring NULL values.
SELECT SUM(Unit_Price) AS Total_Price FROM Orders;
-- Convert NULL to default system date.
SELECT Order_Date,COALESCE(Order_Date, SYSDATE) AS Date_Value FROM Orders;